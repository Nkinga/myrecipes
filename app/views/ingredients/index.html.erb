<div class="container">

  <%= render "shared/page_title", title: "available ingredients" %>
  
  <div align="center">
    <%= will_paginate %>
    <% @ingredients.each do |ingred| %>
      <ul class="listing">
        <div class="row">
          <div class=" well col-md-4 col-md-offset-4">
            
            <li class="chef-title"><%= link_to ingred.name.capitalize, ingredient_path(ingred) %></li>
            
            <li><small><%= pluralize(ingred.recipes.count, "recipe") if ingred.recipes %></small></li>
            <% if logged_in? && current_chef.admin?  %>
              <li><%= link_to "edit this ingredient", edit_ingredient_path(ingred), class: "btn btn-danger"%></li>
            <% end %>
          </div>
        </div>
      </ul>
    <% end %>
    <%= will_paginate %>
  </div>