<%= render "shared/errors", obj: @ingredient %>

<div class="col-md-12 signup-form">
  <%= form_for(@ingredient, :html => {class: "form-horizaontal", role: "form"}) do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-control", placeholder: "enter ingredient ame", autofocus: true %>
    </div>
    <div class="form-group">
      <div><%= f.submit(@ingredient.new_record? ? "Add ingredient" : "Update ingredient", class:"btn btn-default btn-xl") %></div> 
    </div>
  <% end %>
</div>

<div class="col-md-offset-4 col-md-4 back-link"><%= link_to '[ cancel and go back to ingredients listing ]', ingredients_path %></div> 
