<div class="container">
  
  <%= render 'shared/page_title', title: "log in" %>
  
  <div class="col-md-12 signup-form">
    <%= form_for(:session, :html => {class: "form-horizaontal", role: "form"}, url: login_path) do |f| %>
      
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email,class: "form-control", placeholder: "Enter Email Address" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, type: "password", class: "form-control", placeholder: "Enter Password" %>
      </div>
      <div>
        <%= f.submit "Log In", class:"btn btn-default btn-xl" %>
      </div>
    <% end %>
  </div>
  
    <div class="col-md-offset-4 col-md-4 back-link"><%= link_to "[ Don't have an account? Sign up now ]", signup_path %></div> 
