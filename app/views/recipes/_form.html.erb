<%= render "shared/errors", obj: @recipe %>
 
<div class="col-md-12">
  <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-md-2"><%= f.label :name %></div>
      <div class="col-md-8" ><%= f.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: true %></div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2"><%= f.label :description %></div>
      <div class="col-md-8" ><%= f.text_area :description, class: "form-control", rows: 10, placeholder: "Enter steps for recipe" %></div>
    </div>
    
    <div class="form-group">
      <div class="col-md-offset-2 col-md-8">
        <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name do |cb| %>
          <% cb.label(class: "checkbox-inline input-checkbox") { cb.check_box(class: "checkbox") + cb.text } %>
        <% end %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-md-offset-2 col-md-8 back-link"><%= f.submit class:"btn btn-default btn-xl"%></div> 
    </div>
  <% end %>
  
</div>